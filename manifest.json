{
  "name": "FB Tool",
  "description": "FB Tool Chrome Extention.",
  "version": "1.0.0",
  "manifest_version": 2,

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "Invite All"
  },
  "background": {
    "scripts": ["jquery-3.1.1.min.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
  {
    "matches": ["https://www.facebook.com/*"],
    "js": ["content.js"]
  }
  ],

  "permissions": [
    "activeTab"
  ]
}